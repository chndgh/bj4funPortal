<!--pages/selfInfo/selfInfo.wxml-->
  <template name="createActivity">
    <view class="page">
      <form bindsubmit="formSubmit" bindreset="formReset">
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="create_action">活动名称</view>
                </view>
                <view class="weui-cell__bd">
                    <input name="title" class="weui-input" bindinput="bindTitleChange" />
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd" style='width:100%;background-color: 	#9BCD9B;'>
                    <view class="create_action" style="justify-content:center">活动开始时间</view>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="create_action">日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name="startDate" mode="date" start="2015-09-01" end="2017-09-01" bindchange="bindStartDateChange">
                        <view class="weui-input">{{startDate}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="create_action">时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name="startTime" mode="time" start="09:01" end="21:01" bindchange="bindStartTimeChange">
                        <view class="weui-input">{{startTime}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd" style='width:100%;background-color: 	#9BCD9B;'>
                    <view class="create_action" style="justify-content:center">活动结束时间</view>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="create_action">日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name="endDate" mode="date" start="2015-09-01" end="2017-09-01" bindchange="bindEndDateChange">
                        <view class="weui-input">{{endDate}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
                <view class="weui-cell__hd">
                    <view class="create_action">时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker name="endTime" mode="time" start="09:01" end="21:01" bindchange="bindEndTimeChange">
                        <view class="weui-input">{{endTime}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_input">
              <view style='font-size:16px;font-family:"楷体";'>活动描述</view>
              <textarea name="description" bindinput="bindDescChange" class="weui-textarea" style="height: 5.3em" />
                          <view class="weui-textarea-counter">0/200</view>
            </view>
        </view>
        <view class="page__bd page__bd_spacing" style='border=1px'>
            <view class="button-sp-area">
                <button class="weui-btn mini-btn" bindtap="successdeliver" type="primary" formType="submit">发布活动</button>
                <button class="weui-btn mini-btn" type="primary" formType="reset">重新输入</button>
            </view>
        </view>
      </form>
    </view>
  </template>