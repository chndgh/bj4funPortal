page,
.page,
.page__bd{
    height: 100%;
}
.page__bd{
    padding-bottom: 0;
}
.weui-tab__content{
    padding-top: 0px;
    text-align: center;
}

.placeholder{
    margin: 5px;
    padding: 0 10px;
    text-align: center;
    background-color: #7CFC00;
    height: 2.3em;
    line-height: 2.3em;
    color: #cfcfcf;
}

.inner{
  margin-top: 30px;
  display: flex;
  flex-direction:row;
  justify-content:space-around;
  margin-bottom:30px
}

.item{
  height:250rpx;
  width:250rpx;
  border-radius: 250rpx;
  justify-content: center;
  background-color: limegreen;
  display: flex;
  align-items: center;
}
.action_style{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.icons{
  display:flex;
