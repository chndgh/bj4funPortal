<!--pages/test/test.wxml-->
<import src="../createActivity/createActivity.wxml"/> 
<view class="page">
    <view class="page__bd">
        <view class="weui-tab">
            <view class="weui-navbar" style='background-color:white'>
                <block wx:for="{{tabs}}" wx:key="*this">
                    <view id="{{index}}" class="weui-navbar__item {{activeIndex == index ? 'weui-bar__item_on' : ''}}" bindtap="tabClick">
                        <view class="weui-navbar__title">{{item}}</view>
                    </view>
                </block>
                <view class="weui-navbar__slider" style="left: {{sliderLeft}}px; transform: translateX({{sliderOffset}}px); -webkit-transform: translateX({{sliderOffset}}px);"></view>
            </view>
            <view class="weui-tab__panel">
              <view class="weui-tab__content" hidden="{{activeIndex != 0}}">
                <view class="inner">
                      <navigator class="action_style" url='historyActivity/historyActivity?status=1004'>
                        <image class="icons" src="../../icons/history_action.png" ></image>
                        <view class="action_sub_style">历史</view>
                      </navigator>
                      <view>
                        <image class="icons" src="../../icons/current_action.png" ></image>
                        <view class="action_sub_style">当前</view>
                      </view>
                      <view>
                        <image class="icons" src="../../icons/vote.png" ></image>
                        <view class="action_sub_style">我的</view>
                      </view>
                </view>
                <navigator url="" hover-class="weui-cell_active" wx:for="{{activityList}}" wx:key="*this">
                    <view class="weui-media-box weui-media-box_appmsg" style='padding:8px;'>
                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg" style='margin-right:0px;'>
                            <image class="weui-media-box__thumb" style="vertical-align:middle; height:75%;width:75%;" src="../../icons/football.png" />
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                            <view class="weui-media-box__title" style="display:flex;justify-content:left;">{{item.title}}</view>
                            <view class="weui-media-box__desc" style="display:flex;justify-content:left;">{{item.description}}</view>
                        </view>   
                    </view>
                    <view class="weui-media-box__info" style='display:flex;justify-content:center; margin-top:0px'>
                        <view class="weui-media-box__info__meta">时间</view>
                        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">其它信息</view>
                        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">其它信息</view>
                        <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">其它信息</view>
                    </view>
                </navigator> 
              </view>
              <view hidden="{{activeIndex != 1}}">
                <form bindsubmit="formSubmit" bindreset="formReset">
                  <view class="weui-cells weui-cells_after-title">
                      <view class="weui-cell weui-cell_input" >
                          <view class="weui-cell__hd">
                              <view class="create_action" style='text-indent:1em'>主题</view>
                          </view>
                          <view class="weui-cell__bd" style='margin-left:18px'>
                              <input name="title" class="weui-input" bindinput="bindTitleChange" />
                          </view>
                      </view>
                      <view class="weui-cell weui-cell_input" >
                          <view class="weui-cell__hd">
                              <view class="create_action" style='text-indent:1em'>地点</view>
                          </view>
                          <view class="weui-cell__bd" style='margin-left:18px'>
                              <input name="title" class="weui-input" bindinput="bindTitleChange" />
                          </view>
                      </view>
                      <view class="weui-cell weui-cell_input" style='margin-bottom:10px;'>
                          <view class="weui-cell__hd" style='width:100%;'>
                              <view class="create_action" style="justify-content:center;margin-top:10px;">开始时间</view>
                          </view>
                      </view>
                        <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="create_action" style='text-indent:1em'>日期</view>
                            </view>
                            <view class="weui-cell__bd" style='text-indent:1em'>
                                <picker name="startDate" mode="date" start="2015-09-01" bindchange="bindStartDateChange">
                                    <view class="weui-input">{{startDate}}</view>
                                </picker>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="create_action" style='text-indent:1em'>时间</view>
                            </view>
                            <view class="weui-cell__bd" style='text-indent:1em'>
                                <picker name="startTime" mode="time" bindchange="bindStartTimeChange">
                                    <view class="weui-input">{{startTime}}</view>
                                </picker>
                            </view>
                        </view>
                      <view class="weui-cell weui-cell_input" style='margin-bottom:10px;'>
                          <view class="weui-cell__hd" style='width:100%;'>
                              <view class="create_action" style="justify-content:center;margin-top:10px;">结束时间</view>
                          </view>
                      </view>
                      <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="create_action" style='text-indent:1em'>日期</view>
                            </view>
                            <view class="weui-cell__bd" style='text-indent:1em'>
                                <picker name="endDate" mode="date" start="2015-09-01" bindchange="bindEndDateChange">
                                    <view class="weui-input">{{endDate}}</view>
                                </picker>
                            </view>
                        </view>
                        <view class="weui-cell weui-cell_input">
                            <view class="weui-cell__hd">
                                <view class="create_action" style='text-indent:1em'>时间</view>
                            </view>
                            <view class="weui-cell__bd" style='text-indent:1em'>
                                <picker name="endTime" mode="time" bindchange="bindEndTimeChange">
                                    <view class="weui-input">{{endTime}}</view>
                                </picker>
                            </view>
                        </view>
                        <view >
                            <view  style='text-align:center;font-size:13px;'>费用</view>
                            <slider style='width:70%; margin-left:15%' bindchange="slider3change" show-value/>
                        </view>
                        <view>
                          <view style='text-align:center;font-size:13px;'>人数</view>
                            <slider style='width:70%; margin-left:15%' bindchange="slider4change" min="0" max="50" show-value/>
                        </view>
                      <view class="weui-cells__title">详情</view>
                        <view class="weui-cells weui-cells_after-title">
                            <view class="weui-cell">
                                <view class="weui-cell__bd">
                                    <textarea class="weui-textarea" style="height: 3.3em" />
                                </view>
                            </view>
                        </view>
                  </view>
                  <view style='display:flex;background-color:white;flex-direction:row-reverse;'>
                    <view style='margin-top:11px;width:50%;'>
                      <button type="primary" bindtap="formSubmit" style="width:100px;">发布</button>
                    </view>
                  </view>  
                </form>
              </view>
            </view>
        </view>
    </view>
</view>
