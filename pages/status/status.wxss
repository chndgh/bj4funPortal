.item_txt{
  position:absolute;
  width:100%;
  background-color:#fff;
  z-index:5;
}

.item_delete{
  display:flex;
  flex-direction:row-reverse;
  background-color: #e64340;
  width: 180rpx;
  justify-content:center;
  align-items:center;
  height:94px;
  z-index:4;
  color:#fff;
}


.nav{
    position: relative;
    z-index: 99;
    display: flex;
    background: #fff;
}
.nav-son{
    display: flex;
    flex: 1;
    text-align: center;
    height: 40px;
    align-items:center;
    justify-content:center;
    font-size: 14px;
}
.content{
    display: inline-block;
}
.icon{
    display: inline-block;
    border: 4px solid transparent;
    border-top: 4px solid #9b9b9b;
    margin-left: 5px;
}
.temp{
    position: relative;
    z-index: 4;
}
.temp1{
    z-index: 60;
    position: fixed;
    width: 50%;
    max-height: 750rpx;
    overflow-y: scroll;
    padding: 0 0 0 20rpx;
    line-height:100rpx;
    background: #fff;
}
.temp2{
    z-index: 60;
    position: fixed;
    width: 50%;
    max-height: 750rpx;
    overflow-y: scroll;
    padding: 0 0 0 20rpx;
    line-height:100rpx;
    background: #fff;
}
.directionLeft{
  display: flex;
  flex-direction: row;
}
.directionRight{
  display: flex;
  flex-direction: row-reverse;
}
.slidedown{
    transform:  translateY(0%);
}
.temp view{
    border-bottom: 1px solid #d1d3d4;
    font-size: 14px;
    color: #666;
}
.current{
    background: #e0e0e0;
}
.current2{
    background: #fff;
}
.fullbg{
    position: fixed;
    top:0;
    z-index: 1;
    background: rgb(1, 1, 1);
    transition: all 1s;
    opacity: 0;
}
.fullopacity{
    width: 100%;
    height: 100%;
    opacity: .5;
}
.nav-son.active .content{
    color: #61beff;
}
.nav-son.active .icon{
    border-bottom: 4px solid #61beff;
    border-top:0;
}
@keyframes slidown{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(0%);
    }
}
.slidown{
    display: block;
    animation: slidown .7s ease-in both;
}
@keyframes slidup{
    from{
        transform:  translateY(0%);
    }
    to{
        transform:  translateY(-100%);
    }
}
.slidup{
    display: block;
    animation: slidup .7s ease-in both;
}
.disappear{
    display: none;
}